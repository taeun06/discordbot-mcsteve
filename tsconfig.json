{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2022",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "noImplicitAny": false
    },
    "include": [
        "src",
        "src/commands",
        "src/types"
    ],
    "exclude": ["node_modules", "dist"]
}
